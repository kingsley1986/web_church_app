<div class="comment_form">
  <%= simple_form_for [@post, @post.comments.build], remote: true do |f| %>
      <%= f.input :body %>
    <%= f.simple_fields_for :pictures, Picture.new do |comment_pic| %>
      <%= comment_pic.input :image %>
      <%= f.button :submit, "Send", class: "thiclasss" %>
    <% end %>
  <% end %>
</div>
