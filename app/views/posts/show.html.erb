<div class="pagewrapper_show">
  <div class="content_post">
    <ul>
      <table>
        <td>
          <div class="album">
            <div class="imgAlbum">
              <div class="post_title_show">
                <div class="row">
                  <div class="span12">
                    <%= @post.title %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="span12">
                  <div class="post_body_show">
                    <%= @post.post_body %>
                  </div>
                </div>
              </div>
              <div class="post_show_days_ago">
                <div class="row">
                  <div class="span12">
                    <%= "posted #{time_ago_in_words(@post.created_at)}" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="span12">
                  <div class="image_link">
                    <% @post.pictures.each do |pic| %>
                    <%= link_to(image_tag(pic.image.url(:square)), pic, class: "img-responsive") if pic.image? %>
                    <% end %>
                  </div>
                </div>
              </div>
              <ul>
                <div id="like_and_unlike" >
                  <div class="row">
                    <div class="span12">
                      <% if current_user_signed_in %>
                        <% if @post.likes.map(&:user_id).include? current_user.id %>
                          <%= link_to "Unlike", unlike_post_path(@post, like: true), method: :delete, remote: true, :class => 'unliker' %>
                        <%else %>
                          <%= link_to "Like", like_post_path(@post, like: true), remote: true, method: :post, :class => 'liker' %>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="span12">
                    <div class="like_word">
                      <%= pluralize( @post.likes.size, "like") %>
                    </div>
                <% if @post.likes.size >= 1 %>
                <div class="liker" >
                <div class="fa fa-thumbs-o-up" aria-hidden="true"></div>
              </div>
                <% end %>
                  <div class="count_comment">
                    <%= "#{@post.comments.count} Comments" %>
                </div>
              </div>
                  <div id="comments">
                    <%= render @post.comments %>
                    <div class="row">
                      <div class="span12">
                        <h3> Add a Comment: </h3>
                      </div>
                    </div>
                  </div>
                  <% if current_user_signed_in %>
                    <%= render "comments/form" %>
                  <% end %>
                </div>
              </div>
            </ul>
          </div>
        </td>
      </table>
    </ul>
  </div>
  <%= link_to "Back", request.referer.present? ? request.referer : default_path, style:"color: red" %>
</div>
