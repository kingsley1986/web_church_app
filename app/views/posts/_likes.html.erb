<% if current_user_signed_in %>
  <% if @post.likes.map(&:user_id).include? current_user.id %>
    <%= link_to "Unlike", unlike_post_path(@post, like: true), method: :delete, remote: true %>
  <%else %>
    <%= link_to "Like", like_post_path(@post, like: true), method: :post, remote: true %>
  <% end %>
<% end %>
