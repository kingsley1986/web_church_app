<h2>Upload Image</h2>
  <%= form_for(@image_gallery, html: { multipart: true }) do |f| %>
    <% if @image_gallery.errors.any? %>
      <% @image_gallery.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%=msg %></div>
      <% end %>
    <% end %>

    <div class"form-group">
      <%= f.label :image_title %>
      <%= f.text_field :image_title, class:'form-control' %>
    </div>

    <div class="form-group" >
      <%= f.label :image_description %>
      <%= f.text_area :image_description, class:'form-control' %>
    </div>

    <div class-"form-group" >
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <%= f.submit "submit", class:'btn btn-primary' %>
    <%= link_to "Cancel", "hdd", class:'btn btn-default' %>
  <% end%>
